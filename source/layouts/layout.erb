<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= "Bubble Tea Today" + (current_page.data.title ? " - #{current_page.data.title}" : "") %></title>
    
    <meta name="description" 
      content="Want to start a bubble tea store, or looking to improve an existing one? We can help!">
    <%#= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "site" %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-103791093-1', 'auto');
      ga('send', 'pageview');

    </script>

    <script>
      var WebFontConfig = {
          google: {
              families: ['Roboto']
          },
          timeout: 1500
      };

      (function(){
          var wf = document.createElement('script');
          wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
              '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
          wf.async = 'true';
          document.head.appendChild(wf);
      })();    
    </script>
    <%#= javascript_include_tag "site" %>
  </head>
  <body>
    <div class="page-wrapper">

      <%= partial "partials/breadcrumbs" %>

      <div class="page">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
